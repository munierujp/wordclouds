{
  "name": "wordcloud",
  "version": "1.5.0",
  "description": "My word clouds",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rimraf dist",
    "lint": "eslint --ignore-path .gitignore '**/*.{js,cjs,mjs,ts,cts,mts}'",
    "prebuild": "npm run clean",
    "start": "tsx src/main.ts",
    "test": "glob -c 'node --test --import tsx/esm' 'src/**/*.test.ts'"
  },
  "engines": {
    "node": "22.15.1"
  },
  "dependencies": {
    "commander": "12.1.0",
    "fp-ts": "2.16.11",
    "io-ts": "2.2.22",
    "log4js": "6.9.1",
    "playwright": "1.56.0",
    "sharp": "0.34.4"
  },
  "devDependencies": {
    "@munierujp/eslint-config-typescript": "47.1.1",
    "@tsconfig/node22": "22.0.1",
    "@types/node": "22.15.35",
    "eslint": "9.38.0",
    "glob": "11.0.3",
    "rimraf": "6.0.1",
    "tsx": "4.20.6",
    "typescript": "5.9.3"
  },
  "license": "MIT"
}
